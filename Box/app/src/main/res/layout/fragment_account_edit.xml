<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sleepy.box.account.AccountEditFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/id_container_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="类型"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp" />

        <EditText
            android:id="@+id/id_et_category_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:background="@drawable/background_edittext"
            android:hint="请输入账号类型……"
            android:padding="10dp"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toRightOf="@+id/textView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="18sp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="32dp" />

        <EditText
            android:id="@+id/id_et_account_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_edittext"
            android:hint="请输入账号……"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/id_et_category_account"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="18sp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="32dp" />

        <EditText
            android:id="@+id/id_et_pw_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/id_et_account_account"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/background_edittext"
            android:hint="请输入密码……"
            android:padding="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />


        <Button
            android:id="@+id/id_bt_save_account"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="33dp"
            android:text="保存"
            android:onClick="saveAccount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_et_pw_account"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.501" />


    </android.support.constraint.ConstraintLayout>


</FrameLayout>
