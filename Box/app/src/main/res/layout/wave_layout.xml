<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sleepy.box.custom.WaveView
        app:waveAmplitude="25dp"
        app:waveColor="@color/colorSettingFont"
        app:waveFillType="bottom"
        app:waveSpeed="10"
        app:waveStart="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5" />

    <com.sleepy.box.custom.WaveView
        app:waveAmplitude="25dp"
        app:waveColor="@color/colorAccent"
        app:waveOffset="10"
        app:waveSpeed="20"
        app:waveStart="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.3" />

    <com.sleepy.box.custom.WaveView
        app:waveAmplitude="25dp"
        app:waveOffset="30"
        app:waveSpeed="10"
        app:waveStart="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.7" />
</RelativeLayout>
