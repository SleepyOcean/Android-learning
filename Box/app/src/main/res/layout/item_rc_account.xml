<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_container_main_item_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background3"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/id_tv_category_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="163的帐号"
        android:textSize="22sp"
        android:textColor="@color/colorAccount1"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号:"
        android:textSize="16sp"
        android:textColor="@color/colorAccount2"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_category_account"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccount2"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView8" />

    <TextView
        android:id="@+id/id_tv_pw_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ZheShimima123"
        android:textSize="16sp"
        android:textColor="@color/colorAccount3"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_account_account"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.512" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="说明:"
        android:textSize="16sp"
        android:textColor="@color/colorAccount2"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:id="@+id/textView9" />

    <TextView
        android:id="@+id/id_tv_state_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="投简历专用邮箱"
        android:textSize="16sp"
        android:textColor="@color/colorAccount3"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_pw_account"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/id_tv_date_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建于：2017.09.18"
        android:textSize="14sp"
        android:textColor="@color/colorAccount4"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_state_account" />

    <TextView
        android:id="@+id/id_tv_account_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-92dp"
        android:paddingLeft="20dp"
        android:text="test_box@163.com"
        android:textColor="@color/colorAccount3"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_category_account" />

</android.support.constraint.ConstraintLayout>
